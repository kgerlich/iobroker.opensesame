<!DOCTYPE html>
<html>
    <head>
        <title>
            {{ title }}
        </title>
        <link rel="stylesheet" type="text/css" href="index.css">
        <script src="http://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous">
        </script>
    </head>
    <body>
        <div>
            {{#each id}}
                <button id="{{ this }}">
                    <p>OPEN {{@index}}</p>
                </button>
                <div></div>
            {{/each}}
        </div>
    </body>
    <script>
        $( document ).ready(function() {
            {{#each id}}
                $( "#{{ this }}" ).click(function() {
                    $( "#{{ this }}" ).animate({
                        opacity: 0.0
                    }, 250, function() {
                        // Animation complete.
                        $.get( "/open",  { id: "{{ this }}" } , function( data ) {
                            $( "#{{ this }}" ).animate({
                                opacity: 1.0
                            }, 100);
                        });
                    });
                });        
            {{/each}}
        });        
    </script>
</html>